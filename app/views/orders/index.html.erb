<div class="container">
<p id="notice"><%= notice %></p>

<h1>Orders</h1>
    <%= link_to 'New Order', new_order_path, class: "btn btn-default" %>

<table class="table table-striped table-inverse ">
  <thead>
    <tr>
      <th>Order ID</th>
      <th> Product</th>
      <th> Price</th>
      <th>Quantity</th>
      <th>Client</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>

      <% @order_products.map do |op| %>
      <tr>
        <td> <%= op.order.client_id %> </td>
        <td> <%= op.product.title %> </td>
        <td> <%= number_to_currency(op.product.price, :unit => "$") %> </td>
        <td> <%= op.quantity %> </td>

      
      <% end %>

    <% @orders.each do |order| %>
      
        <td><%= order.client.name %></td>
        <td><%= link_to 'Show', order %>
        <%= link_to 'Edit', edit_order_path(order) %>
        <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end %>
  </tbody>
</table>
      



</div>
