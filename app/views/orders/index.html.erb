<h1>Orders</h1>
<div class="container">

	<div class="form">
		<%= render 'orders' %>
	</div>	

	<table class="table table-striped table-inverse " id="table">

	  <thead>
	    <tr>
	      <th>Client name</th>
	      <th>Age</th>
	      <th>Product</th>
	      <th>Price</th>
	      <th>quantity</th>
	      <th>Action</th>
	      <th></th>
	    </tr>
	  </thead>
	 
	    <tbody>
	    	<tr>				
				<% @order.clients.each do |o| %>
						<td> <%= o.clients.name %> </td>
						<td> <%= o.clients.quantity %></td> 					
						<td><%= link_to 'Delete', order_path(o),
				           	  method: :delete, class: "btn btn-danger",
				            	 data: {confirm: 'Do you want to remove this Order?'} %> 	
					    </td>	             	 	
					<% end %>
			</tr>
		</tbody>		
	</table>
</div>

